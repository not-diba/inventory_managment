<h1><%= @department.department_name %></h1>

<div class="x_panel">
  <div class="x_title">
    <h2></i> <%= @department.department_name + ' Laboratories'%> </h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <div class='row'>
    <% if @department.labs.length == 0 %>
      <p>No Laboratories Present</p>
    <% else %>
      <%= render @department.labs %>
    <% end %>
    </div>
  <hr/>
    <h2 class='pl-2'> Add a Laboratory </h2>
      <%= render 'labs/form' %>
  </div>

  