<div class="x_panel mt-5">
  <div class="x_title">
    <h2><%= @department.department_name %></h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table">
        <tbody>
            <tr>
                <th scope="row">Department Name</th>
                <td><%= @department.department_name %></td>
            </tr>
            <tr>
                <th scope="row">Administartor Name</th>
                <td><%= Administrator.find(@department.administrator_id).name %></td>
            </tr>
            <tr>
                <th scope="row">Location</th>
                <td><%= @department.location %></td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td><%= @department.description %></td>
            </tr>
            <tr>
                <th scope="row">Laboratory Count</th>
                <td><%= @department.labs.count %></td>
            </tr>
            <tr>
                <th scope="row">Created At</th>
                <td><%= @department.created_at.strftime("%Y-%m-%d") %></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
    <div class="clearfix"></div>
    <%= link_to 'Back', departments_table_index_path, class: 'btn btn-warning rounded-pill float-right' %>
    <%= link_to '<i class="fa fa-trash-o"></i> Delete' .html_safe,
                      department_path(@department.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                      class: 'btn btn-danger rounded-pill float-left' %>
    <%= link_to '<i class="fa fa-pencil-square-o"></i> Edit' .html_safe,
                    edit_department_path(@department.id), class: 'btn btn-info rounded-pill float-left' %>
</div>