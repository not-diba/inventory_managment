<div class="x_panel mt-5">
  <div class="x_title">
    <h2><%= @equipment.equipment_name %></h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table">
        <tbody>
            <tr>
                <th scope="row">Equipment Name</th>
                <td><%= @equipment.equipment_name %></td>
            </tr>
            <tr>
                <th scope="row">Laboratory Name</th>
                <td><%= Lab.find(@equipment.lab_id).lab_name %></td>
            </tr>
            <tr>
                <th scope="row">Make</th>
                <td><%= @equipment.make %></td>
            </tr>
            <tr>
                <th scope="row">Serial Number</th>
                <td><%= @equipment.serial_number %></td>
            </tr>
            <tr>
                <th scope="row">Model Number</th>
                <td><%= @equipment.model_number %></td>
            </tr>
            <tr>
                <th scope="row">Status</th>
                <td><%= @equipment.status %></td>
            </tr>
            <tr>
                <th scope="row">Room</th>
                <td><%= Room.find(@equipment.room_id).room_name %></td>
            </tr> 
            <tr>
                <th scope="row">Remarks</th>
                <td><%= @equipment.remarks %></td>
            </tr>
            <tr>
                <th scope="row">Created At</th>
                <td><%= @equipment.created_at.strftime("%Y-%m-%d") %></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
    <div class="clearfix"></div>
    <%= link_to 'Back', equipment_index_path, class: 'btn btn-warning rounded-pill float-right' %>
    <%= link_to '<i class="fa fa-trash-o"></i> Delete' .html_safe,
                      equipment_path(@equipment.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                      class: 'btn btn-danger rounded-pill float-left' %>
    <%= link_to '<i class="fa fa-pencil-square-o"></i> Edit' .html_safe,
                    edit_equipment_path(@equipment.id), class: 'btn btn-info rounded-pill float-left' %>
</div>