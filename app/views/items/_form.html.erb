<%= form_with model: [@lab, @lab.items.build ] do |f| %>
  <div class="row">
    <div class="col">
      <%= f.collection_select :item_name, @lab.equipment.order(:equipment_name),:equipment_name,:equipment_name, { include_blank: "Equipment" }, { class: "form-control rounded" } %>
    </div>
    <div class="col">
      <% if current_administrator.role_id == 3 %>
              <%= f.collection_select :administrator_name, Administrator.order(:name),:name,:name, { include_blank: "Administrator" }, { class: "form-control rounded" } %>
            <% elsif current_administrator.role_id == 4 %>
              <%= f.hidden_field :administrator_name, class: 'form-control rounded' ,
              :required=> true, value: current_administrator.name %>
              <input type="administrator_name" class="form-control rounded" readonly="readonly" placeholder= <%= current_administrator.name %>>
            <% end %>
    </div>
    <div class="col">
      <%= f.collection_select :room_id, Room.order(:room_name),:id,:room_name, { include_blank: "Room" }, { class: "form-control rounded" } %>
    </div>
    <div class="col">
      <%= f.text_field :quantity, class: 'form-control rounded border-primary', placeholder: 'Quantity', :required => true %>
    </div>
    <div class="col">
      <%= f.text_field :assigned_to, class: 'form-control rounded border-primary', placeholder: 'Assigned To', :required => true %>
    </div>
    <div class="col">
      <%= f.text_field :remarks, class: 'form-control rounded border-primary', placeholder: 'Remarks', :required => true %>
    </div>
    <div class="col">
      <div class="row">
        <div class="col-auto justify-content-end">
          <div class="text-primary">Returned</div>
        </div>
        <div class="col-auto">
          <%= f.check_box :returned, class: 'input-group mt-1', style: 'width: 15px; height: 15px;' %>
        </div>
      </div>
    </div>
    
    <div class="col-auto">
      <%= f.submit nil, :class => 'btn btn-primary rounded-pill' %>
      <%= link_to 'Back', :back, class: 'btn btn-warning rounded-pill' %>
    </div>
  </div>
<% end %>

