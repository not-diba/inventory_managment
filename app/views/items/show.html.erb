<div class="x_panel mt-5">
  <div class="x_title">
    <h2><%= @item.item_name %></h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table">
        <tbody>
            <tr>
                <th scope="row">Item Name</th>
                <td><%= @item.item_name %></td>
            </tr>
            <tr>
                <th scope="row">Administrator Name</th>
                <td><%= @item.administrator_name %></td>
            </tr>
            <tr>
                <th scope="row">Laboratory</th>
                <td><%= Lab.find(@item.lab_id).lab_name %></td>
            </tr>
            <tr>
                <th scope="row">Room</th>
                <td><%= Room.find(@item.room_id).room_name %></td>
            </tr>
            <tr>
                <th scope="row">Quantity</th>
                <td><%= @item.quantity %></td>
            </tr>
            <tr>
                <th scope="row">Unit</th>
                <td><%= @item.unit %></td>
            </tr>
            <tr>
                <th scope="row">Assigned To</th>
                <td><%= @item.assigned_to %></td>
            </tr>
            <tr>
                <th scope="row">Returned</th>
                <td><%= @item.remarks %></td>
            </tr> 
            <tr>
                <th scope="row">Remarks</th>
                <td><%= @item.remarks %></td>
            </tr>
            <tr>
                <th scope="row">Created At</th>
                <td><%= @item.created_at.strftime("%Y-%m-%d") %></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
    <div class="clearfix"></div>
    <%= link_to 'Back', items_index_path, class: 'btn btn-warning rounded-pill float-right' %>
    <%= link_to '<i class="fa fa-trash-o"></i> Delete' .html_safe,
                      item_path(@item.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                      class: 'btn btn-danger rounded-pill float-left' %>
</div>