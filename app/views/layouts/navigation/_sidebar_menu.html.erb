<!-- menu profile quick info -->
<div class="profile clearfix">
  <div class="profile_pic">
    <%= image_tag 'user.png' , alt: 'User' , class: 'img-circle profile_img' %>
  </div>
  <div class="profile_info">
    <span>Welcome,</span>
    <h2>
      <%= current_administrator.name %>
    </h2>
  </div>
</div>
<!-- /menu profile quick info -->
<br />

<div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
  <div class="menu_section">
    <ul class="nav side-menu">
      <li>
        <%= link_to '<i class="fa fa-home"></i> Home' .html_safe, departments_path %>
      </li>
    </ul>
    <hr>
    <h3>General</h3>
    <ul class="nav side-menu">
      <li><a><i class="fa fa-table"></i> Inventory Tables <span class="fa fa-chevron-down"></span></a>
        <ul class="nav child_menu">
          <li>
            <%= link_to "Departments" , departments_table_index_path %>
          </li>
          <li>
            <%= link_to "Labs" , labs_index_path %>
          </li>
          <li>
            <%= link_to "Equipment" , equipment_index_path %>
          </li>
          <li>
            <%= link_to "Rooms" , rooms_path %>
          </li>
        </ul>
      </li>
    </ul>
  </div>
  <% if current_administrator.role_id == 3 %>
    <div class="menu_section">
      <h3>Management</h3>
      <ul class="nav side-menu">
        <li><a><i class="fa fa-user"></i> Administration <span class="fa fa-chevron-down"></span></a>
          <ul class="nav child_menu">
            <li>
              <%= link_to "Administrators" , administrators_path %>
            </li>
            <li>
              <%= link_to "Roles" , roles_path %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  <% end %>

</div>

<!-- /menu footer buttons -->
<div class="sidebar-footer hidden-small">
  <%= link_to '<span class="glyphicon glyphicon-off" aria-hidden="true"></span>' .html_safe, logout_path, data: {
    toggle: 'tooltip' , placement: 'top' }, class: 'float-right' %>
</div>
<!-- /menu footer buttons -->
</div>
</div>