<h1>Roles</h1>
<div class="x_panel">
  <div class="x_title">
  <ul class="nav navbar-right panel_toolbox float-right">
      <%= link_to '<i class="fa fa-plus pull-right"></i> New Role' .html_safe, new_role_path, class:'text-info' %>
    </ul>
    <ul class="nav navbar-right panel_toolbox float-left">
      <li><input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for role ..."
          title="Type in a role name" class="form-control form-control-sm rounded border-info"></li>
          <li><i class="fa fa-search pt-2 pl-2 text-info" aria-hidden="true"></i></li>
    </ul>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
        <table class="table table-sm" id="myTable">
          <caption>List of all Roles</caption>
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">
                Role Name
              </th>
              <th scope="col" class="text-center">
                Actions
              </th>
            </tr>
          </thead>
          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <th scope="row">
                  <%= role.id %>
                </th>
                <td>
                  <%= role.role_name %>
                </td>
                <td class="text-center">
                    <%= link_to '<i class="fa fa-trash-o pull-right"></i> Delete' .html_safe,
                      role_path(role), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                      class: 'ml-3 text-danger' %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
    </div>

          <script>
            function myFunction() {
              var input, filter, table, tr, td, i, txtValue;
              input = document.getElementById("myInput");
              filter = input.value.toUpperCase();
              table = document.getElementById("myTable");
              tr = table.getElementsByTagName("tr");
              for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                  txtValue = td.textContent || td.innerText;
                  if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                  } else {
                    tr[i].style.display = "none";
                  }
                }
              }
            }
          </script>