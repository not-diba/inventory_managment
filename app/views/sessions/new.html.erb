<body class="login">
    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <%= form_tag sessions_path do %>
              <h1>Login Form</h1>
              <div>
                <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email', :required => true %>
              </div>
              <div>
                <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password', :required => true %>
              </div>
              <div>
                <%= submit_tag "Log In", class: 'btn btn-default submit', style: 'font-size: 12px;' %>
                <a class="reset_pass" href="#">Lost your password?</a>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <p class="change_link">New to site?
                  <a href="#signup" class="to_register"> Create Account </a>
                </p>

                <div class="clearfix"></div>
                <br />

                <div>
                  <h1><i class="fa fa-book"></i> Inventory Managment</h1>
                  <p><%= Time.current.year %> All Rights Reserved. PJR132. Privacy and Terms</p>
                </div>
              </div>
            <% end %>
          </section>
        </div>
      </div>
    </div>
  </body>